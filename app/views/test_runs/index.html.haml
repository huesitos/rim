%p.notice= notice
%h1 Listing test_runs

%h4
  =link_to 'New Test Run', new_project_test_run_path(@project), id: :button

%ul
  - @test_runs.each do |test_run|
    %li
      = link_to "Test run #{test_run.date.to_time}",project_test_run_path(@project, test_run)
      \|
      = link_to 'Destroy', project_test_run_path(@project, test_run), :method => :delete, :data => { :confirm => 'Are you sure?' }

=link_to "Back", @project