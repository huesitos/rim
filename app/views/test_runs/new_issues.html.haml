- if notice
  %p{class: "alert alert-#{alert}"}= notice

%h3= "New issue for #{@report.test_case.identifier} run"

=form_for(:issue, url: project_test_run_create_issues_path(@project, @test_run, @report)) do |f|
  .form-horizontal
    .form-group
      .field
        =f.label :title, class: 'col-sm-2 control-label'
        .col-sm-10
          =f.text_field :title, class: 'form-control'
    .form-group
      .field
        =f.label :description, class: 'col-sm-2 control-label'
        .col-sm-10
          =f.text_area :description, class: 'form-control'
    .form-group
      .field
        = f.label :labels, 'Labels', class: 'col-sm-2 control-label'
        .col-sm-10
          = f.select(:labels, options_for_select(@labels.to_a), {}, {:multiple => true, :class => 'form-control'})
    .form-group
      .col-sm-offset-2.col-sm-10
        .actions
          =f.submit "Save", class: 'btn btn-primary'
          = f.submit 'Continue', class: 'btn btn-primary'