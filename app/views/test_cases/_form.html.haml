= form_for @test_case, url: @url do |f|
  - if @test_case.errors.any?
    #error_explanation
      %h2= "#{pluralize(@test_case.errors.count, "error")} prohibited this test_case from being saved:"
      %ul
        - @test_case.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :preconditions
    = f.text_area :preconditions
  .field
    = f.label :steps
    = f.text_area :steps
  .field
    = f.label :postconditions
    = f.text_area :postconditions
  .field
    = f.label :use_cases
    - if @formatted_use_cases
      = f.text_field :use_cases, value: "#{@formatted_use_cases}"
    - else
      = f.text_field :use_cases

  .field
    = f.label :requirements
    - if @formatted_requirements
      = f.text_field :requirements, value: "#{@formatted_requirements}"
    - else
      = f.text_field :requirements
  .actions
    = f.submit 'Save'
