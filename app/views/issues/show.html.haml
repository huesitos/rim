- if notice
  %p{class: "alert alert-#{alert}"}= notice

%h3="#{@issue.identifier} #{@issue.title}"

#issue-info
  %p
    %b Labels:
    - @issue.labels.each do |l|
      = l.name
    %b Status:
    =@issue.status.name
  %p
    =@issue.description

%h4.header Comments
- @comments.each do |comment|
  .list-item
    %p=comment.date
    %p=comment.body
    %p= link_to 'Delete', project_issue_comment_path(params[:project_id], @issue.id, comment.id), method: :delete

%p
  =link_to 'Add a comment', new_project_issue_comment_path(@project, @issue)

=link_to 'Edit', edit_project_issue_path(params[:project_id], @issue.id)
=link_to 'Delete', project_issue_path(params[:project_id], @issue.id), method: :delete