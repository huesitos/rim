= form_for @use_case, url: project_use_cases_path(@project) do |f|
  - if @use_case.errors.any?
    #error_explanation
      %h2= "#{pluralize(@use_case.errors.count, "error")} prohibited this use_case from being saved:"
      %ul
        - @use_case.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :preconditions
    = f.text_area :preconditions
  .field
    = f.label :steps
    = f.text_area :steps
  .field
    = f.label :postconditions
    = f.text_area :postconditions
  .field
    = f.label :requirements
    = f.text_field :requirements
  .field
    = f.label :priority
    = f.select :priority, [['Low'], ['High'], ['Medium']]
  .actions
    = f.submit 'Save'
