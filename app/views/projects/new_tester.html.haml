- if notice
	%p{class: "alert alert-#{alert}"}= notice

%h3 New tester

= form_for(:tester, url: project_new_tester_path(@project)) do |f|
	.form-horizontal
		.form-group
			.field
				= f.label :email, class: 'control-label col-sm-2'
				.col-sm-6
					= f.text_field :email, placeholder: 'User email', class: 'form-control'

		.form-group
			.col-sm-offset-2.col-sm-6
				= f.submit "Add tester", class: "btn btn-primary"