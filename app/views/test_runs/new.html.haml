- if notice
	%p{class: "alert alert-#{alert}"}= notice
	
%h3 New test run

= form_for [@project, @test_run] do
	.form-horizontal
		.form-group
			.field
				= label_tag 'test_cases', "Test cases", class: 'col-sm-2 control-label'
				.col-sm-10
					= select_tag("test_cases", options_for_select(@tc_select), multiple: true, class: 'form-control')
		.form-group
			.col-sm-offset-2.col-sm-10
				.actions
					= submit_tag("Run all", class: 'btn btn-primary')
					= submit_tag('Run', class: 'btn btn-primary')

= link_to "Cancel", project_test_runs_path(@project)