%h1 New test run

= form_for [@project, @test_run] do
	.field
		= label_tag "Test cases to run"
		= text_field_tag 'test_cases', nil, placeholder: "identifiers separated by comma"
	.actions
		= submit_tag('Run')
		= submit_tag("Run all")

%h3 List of test cases

%ul
	- @test_cases.each do |tc|
		%li
			= tc.identifier
			= tc.title 

= link_to "Cancel", project_test_runs_path(@project)